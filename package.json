{
  "name": "gita-ai-assistant",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "generate-verses": "tsx scripts/generate-verses.ts submit",
    "generate-verses:status": "tsx scripts/generate-verses.ts status",
    "generate-verses:collect": "tsx scripts/generate-verses.ts collect",
    "generate-verses:sequential": "tsx scripts/generate-verses.ts sequential",
    "generate-audio": "tsx scripts/generate-audio.ts generate",
    "generate-audio:status": "tsx scripts/generate-audio.ts status",
    "heroku-postbuild": "npm run build && cp -r public .next/standalone/public && cp -r .next/static .next/standalone/.next/static && cp -r data .next/standalone/data && rm -rf data/audio"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.40",
    "@ai-sdk/react": "^3.0.80",
    "ai": "^6.0.78",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@elevenlabs/elevenlabs-js": "^2.35.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tsx": "^4.19.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
